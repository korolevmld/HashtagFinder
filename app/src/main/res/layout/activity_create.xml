<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinner_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/serviceNames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <EditText
        android:id="@+id/et_hashtag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="@string/hint_et_hashtag"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintEnd_toEndOf="@+id/spinner_service"
        app:layout_constraintStart_toStartOf="@+id/spinner_service"
        app:layout_constraintTop_toBottomOf="@+id/spinner_service" />

    <Button
        android:id="@+id/bt_add_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/bt_text_add_hashtag"
        app:layout_constraintEnd_toEndOf="@+id/et_hashtag"
        app:layout_constraintStart_toStartOf="@+id/et_hashtag"
        app:layout_constraintTop_toBottomOf="@+id/et_hashtag" />


</androidx.constraintlayout.widget.ConstraintLayout>